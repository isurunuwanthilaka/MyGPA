<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isumalab.gpa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.InfoActivity"
            android:label="Info"
            android:theme="@style/AppTheme.NoActionBar"
            />


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activity.NewModuleActivity"
            android:label="Add Module"
            />

        <activity
            android:name=".activity.EditModuleActivity"
            android:label="Edit Module"
            />

        <activity
            android:name=".activity.SemesterOneActivity"
            android:label="Semester 1 "
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".activity.SemesterTwoActivity"
            android:label="Semester 2 "
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".activity.SemesterThreeActivity"
            android:label="Semester 3 "
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".activity.SemesterFourActivity"
            android:label="Semester 4 "
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".activity.SemesterFiveActivity"
            android:label="Semester 5 "
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".activity.SemesterSixActivity"
            android:label="Semester 6 "
            android:theme="@style/AppTheme.NoActionBar"
            />

        <activity
            android:name=".activity.SemesterSevenActivity"
            android:label="Semester 7 "
            android:theme="@style/AppTheme.NoActionBar"
            />

        <activity
            android:name=".activity.SemesterEightActivity"
            android:label="Semester 8 "
            android:theme="@style/AppTheme.NoActionBar"
            />
        <service android:name=".services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>



</manifest>